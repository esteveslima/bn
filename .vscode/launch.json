{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Serverless Offline",
            "type": "node",
            "request": "attach",            
            "protocol": "inspector",
            "processId": "${command:PickProcess}",
            "restart": true,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/.webpack/**/*.js"        
            ],
            "remoteRoot": "/serverless-template",            
            "address": "localhost",
            "port": 4000,                                    
        }
    ]
}